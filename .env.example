# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme123

# Webhook Configuration
WEBHOOK_URL=http://localhost:5678/webhook
WEBHOOK_TEST_URL=http://localhost:5678/webhook-test

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Services
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-pro
NANOBANANA_API_KEY=your_nanobanana_api_key
NANOBANANA_BASE_URL=https://api.nanobanana.com

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage Configuration
STORAGE_BUCKET=cuentos-infantiles
STORAGE_BASE_URL=https://your-project.supabase.co/storage/v1/object/public
CDN_BASE_URL=https://your-cdn-domain.com

# PDF Generation
PDF_TEMP_PATH=./temp/pdfs
PDF_QUALITY=high
PDF_FORMAT=A4
PDF_MARGIN=40px

# Monitoring & Logging
LOG_LEVEL=info
METRICS_ENABLED=true
ALERT_WEBHOOK_URL=
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10

# Queue Configuration
QUEUE_CONCURRENCY=3
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Development
NODE_ENV=development
DEBUG=n8n:*